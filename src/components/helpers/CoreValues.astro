
---
import CoreValuesData from "../../data/coreValues.json";
import DynamicIcon from "./DynamicIcon.astro";
---

<section class="core-values-section">
  <div class="container">
    <div class="header">
      <p class="subtitle">GROWING WITH OUR CLIENTS</p>
      <h2>{CoreValuesData.title}</h2>
      <p class="description">{CoreValuesData.subtitle}</p>
      <button class="cta-button">{CoreValuesData.button.text}</button>
    </div>
    
    <div class="boxes-container">
      {CoreValuesData.values.map((boxItem) => (
        <div class="box">
          <DynamicIcon name={boxItem.icon} class="icon" />
          <h3>{boxItem.title}</h3>
          <p>{boxItem.description}</p>
          <a href={boxItem.link.url} class="read-more-link">
            {boxItem.link.text} â†’
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .core-values-section {
    background: #2a2a2a;
    padding: 4rem 0;
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .header {
    text-align: left;
    margin-bottom: 3rem;
  }

  .subtitle {
    color: #888;
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 0.5rem;
    letter-spacing: 1px;
  }

  .header h2 {
    color: white;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .description {
    color: #ccc;
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 600px;
  }

  .cta-button {
    background: white;
    color: #333;
    border: none;
    padding: 12px 24px;
    border-radius: 25px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background: #f0f0f0;
  }

  .boxes-container {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .box {
    flex: 1;
    background: white;
    border-radius: 12px;
    padding: 2rem 1.5rem;
    color: #333;
    transition: transform 0.3s ease;
  }

  .box:hover {
    transform: translateY(-5px);
  }

  .icon {
    width: 48px;
    height: 48px;
    margin-bottom: 1.5rem;
    padding: 12px;
    background: #f8f8f8;
    border-radius: 12px;
    border: none;
  }

  .box h3 {
    color: #333;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .box p {
    color: #666;
    font-size: 14px;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .read-more-link {
    color: #333;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .read-more-link:hover {
    color: #000;
  }

  @media (max-width: 768px) {
    .boxes-container {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 1024px) {
    .boxes-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>