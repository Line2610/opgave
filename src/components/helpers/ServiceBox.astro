---
import servicesData from "../../data/services.json";
---

<div class="service-boxes">
  {servicesData.services.map((service) => (
    <div class="service-box">
      <h3>{service.title}</h3>
      <p>{service.description}</p>
      <button class="learn-more">
        {service.buttonText}
      </button>
    </div>
  ))}
</div>

<style>
  .service-boxes {
    display: flex;
    position: absolute;
    bottom: 60px;
    left: 0;
    right: 0;
    gap: 20px;
    padding: 40px 0;
    justify-content: center;
    flex-wrap: wrap;
  }

  .service-box {
    padding: 32px 24px;
    width: 280px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.20);
    background: rgba(38, 38, 38, 0.90);
    backdrop-filter: blur(16px);
  }

  .service-box h3 {
    color: #FFFFFF;
    margin: 0;
    line-height: 1.3;
  }

  .service-box p {
    color: #FFF;
    line-height: 147.5%;
    margin: 0;
    flex-grow: 1;
  }

  .learn-more {
    background: transparent;
    color: #FFFFFF;
    background: #151515;
    padding: 12px 20px;
    border-radius: 55px;
    font-family: Lato, sans-serif;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    align-self: flex-start;
  }

  .learn-more:hover {
    background: #FFF;
    border-color: #FFF;
    color: #000000;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .service-boxes {
      flex-direction: column;
      align-items: center;
    }
    
    .service-box {
      width: 100%;
      max-width: 320px;
    }
  }
</style>