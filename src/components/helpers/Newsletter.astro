<section>
  <div class="newsletter-section">
      <div class="newsletter-content">
        <h3>Subscribe Our Newsletter</h3>
        <p>Build stronger Customer Relationships with Consultalk</p>
      </div>
      <div class="newsletter-form">
        <input type="email" placeholder="Enter your email address" />
        <button type="submit">Subscribe</button>
      </div>
    </div>
</section>


<style>
      .newsletter-section {
    background: #2a2a2a;
    color: white;
    padding: 3rem;
    border-radius: 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    max-width: 1200px;  
    margin: 0 auto;
    margin-bottom: 2rem;
  }

  .newsletter-content h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .newsletter-content p {
    margin: 0;
    color: #fff;
    font-size: 14px;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 300px;
  }

  .newsletter-form input {
    flex: 1;
    padding: 12px 16px;
    border: none;
    border-radius: 6px;
    font-size: 14px;
  }

  .newsletter-form button {
    background: #FBC336;
    color: #333;
    border: none;
    padding: 12px 24px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    white-space: nowrap;
  }

  .newsletter-form button:hover {
    background: #e6af2e;
  }
</style>